<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".EditFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Data Produk"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/uploadimg"
                android:id="@+id/uploadImage"
                android:scaleType="fitXY"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/uploadNamaProduk"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter Nama Produk"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/uploadHargaMenu"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType = "number"
                android:hint="Enter Price"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/uploadDesc"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:hint="Enter Deskripsi"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/uploadCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:inputType="none"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputdate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:minHeight="48dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rectangle_date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/date"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Masukan Tanggal"
                    android:minHeight="48dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:hint="Enter Latitude"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/longitude"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType = "number"
                android:hint="Enter Longitude"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/altitude"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType = "number"
                android:hint="Enter Altitude"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edAcc"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType = "number"
                android:hint="edAcc"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/uploadlocation"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:inputType = "number"
                android:hint="Enter Location"
                android:background="@drawable/shape_rectangle_date"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/findlocation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/blue"
                android:text="Find Location"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                app:cornerRadius = "20dp"
                android:backgroundTint="@color/blue"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</ScrollView>